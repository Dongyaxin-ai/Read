/* pages/science/science.wxss */

page {
    background-color: #20262d;
}
.wrap {
    width: 655rpx;
    margin: 0 auto;
}
.hotbuy {
    display: flex;
    flex-direction: column;
    margin-top: 85rpx;
}

.hb {
    display: flex;
    flex-direction: row;
    background-color: #2b323b;
    box-sizing: border-box;
    border-radius: 30rpx;
    padding: 25rpx 20rpx 30rpx 30rpx;
    margin-right: 20rpx;
    margin-bottom: 85rpx;
}
.hb-left {
    position: relative;
    top: -40rpx;
    width: 170rpx;
    height: 250rpx;
}
.hb-right {
    padding-left: 30rpx;
    overflow: hidden;
}
.hbr-top {
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid #363d47;
}
.hbrt {
    width: 355rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    color: #fff;
}
.hbr-title {
    font-size: 40rpx;
    color: #fff;
}
.dian {
    font-size: 30rpx;
}
.hbr-writer {
    padding-top: 14rpx;
    font-size: 24rpx;
    color: #fff;
}
.hb-bottom {
    width: 355rpx;
    color: #777e99;
    font-size: 24rpx;
    padding-top: 18rpx;
    display: -webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2;
    text-overflow: ellipsis;
    overflow:hidden;
    
}